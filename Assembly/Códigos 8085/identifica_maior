;IDENTIFICAR O MAIOR VALOR DENTRE 5 VALORES
MVI A,00H
MVI B,00H

MVI B,07H   ;DETERMINA CONTADOR DE 5 POSIC. DE MEM
LXI H,2000H ;ARMAZENA A POS. INICIAL DE MEM NO PAR HL
MOV A,M     ;ARMAZENAR O VALOR DA 1Âª POSIC. EM A

V: CMP M       ;COMPARANDO O RG. M COM O A
	       ;SE MAIOR FLAG CY=1
   JNC S       ;DESVIO CONDICIONAL DA FLAG CY - SE O 
	       ;VALOR DO ACUM. FOR > QUE O DE "M"
   MOV A,M     ;COPIA O VALOR DA POS. DE MEM QDO >


S: INX H   ;INCREMENTO EM HL PARA A PROX. POS. DE MEM
   DCR B   ;DECREMENTA O CONTADOR C 
   JNZ V   ;DESVIO COND SE O VALOR DE REG C FOR 
           ;DIF. DE ZERO

LXI H,2007H
MOV M,A

HLT