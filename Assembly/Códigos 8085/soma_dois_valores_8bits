;SOMA DE VALORES DE 8 BITS E STATUS DA CARRY (CY)
;UTILIZAR DADOS A PARTIR DA POSIÇÃO DE MEM. 3000H
;SALVAR O RESULTADO DA SOMA EM 3002H
;SALVAR O STATUS DE CY EM 3003H

MVI A,00H ;ZERA O ACUMULADOR
MVI B,00H ;ZERA O REG B
MVI C,00H ;ZERAR O REG. C - STATUS DA CARRY
LXI H,3000H ;APONTA A POSIÇÃO DE MEM. PARA HL
MOV A,M ;COPIA O CONTEUDO DA MEM.3000H 
MOV B,A  ;COPIA O CONT. DO ACUMUL. PARA O O REG. B
INX H ;INCREMENTO O PAR HL
MOV A,M ;COPIA O CONTEUDO DA MEM.3001H 

ADD B 	;SOMA O CONTE. DO REG. B COM O CONT. DO ACUMU.
	; E SALVA NO ACUMULADOR
;ADD M  ;INSTRUÇÃO DE SOMA

JNC SOMA ;JUMP  CARRY - DESVIO CONDICIONAL DE CY=0
INR C ;INCREMENTA O CONTADOR C


SOMA: INX H ;INCREMENTO DE HL PARA 3002H
      MOV M,A
      
      INX H ;INCREMENTO DE HL PARA 3003H  
      MOV M,C

HLT